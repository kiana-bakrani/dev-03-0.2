<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<VBox spacing="12" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="cs151.application.StudentCommentController" prefWidth="400" prefHeight="500">
    <Label text="Edit Comments" style="-fx-font-size:18;" />

    <ListView editable="true" fx:id="CommentsList" prefHeight="400"/>

    <HBox spacing="10">
        <Button fx:id="backBtn" text="Back"/>
        <Button fx:id="addBtn" text="Add Comment"/>
        <Button fx:id="deleteBtn" text="Delete" disable="true"/>
        <Button fx:id="editBtn" text="Edit" disable="true"/>
        <Button fx:id="finishBtn" text="Done"/>
        <Label fx:id="statusLabel"/>
    </HBox>
</VBox>
