<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="cs151.application.StudentProfileController"
            prefWidth="760" prefHeight="560">

    <children>
        <VBox spacing="12" style="-fx-padding: 16;"
              AnchorPane.topAnchor="0.0"
              AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0">

            <!-- TOP: Profile form -->
            <TitledPane text="Student Profile" collapsible="false">
                <content>
                    <GridPane hgap="16" vgap="12" style="-fx-padding: 12;">
                        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label fx:id="NameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Academic Status:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <Label fx:id="StatusLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Employed:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <Label fx:id="EmployedLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Job Details:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <Label fx:id="JobLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Programming Languages:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <Label fx:id="ProgLangLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                        <Label text="Databases:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <Label fx:id="DatabasesLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                        <Label text="Preferred Roles:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                        <Label fx:id="RoleLabel" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
                        
                        <Label text="WhiteList/BlackList:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                        <Label fx:id="ListingLabel" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
                    </GridPane>
                </content>
            </TitledPane>

            <!-- BOTTOM: Comments table -->
            <TitledPane text="Comments" collapsible="false" VBox.vgrow="ALWAYS">
                <content>
                    <ListView fx:id="commentsView" prefHeight="360">
                    </ListView>
                </content>
            </TitledPane>

        </VBox>
    </children>
</AnchorPane>
