<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
                        fx:controller="cs151.application.ReportsController">
    
        <!--
            this is the reports page. quick notes:
            - summary tab shows counts and distributions
            - whitelist/blacklist tab shows a table you can filter
            - comments here just explain layout sections, nothing fancy
        -->
        <!-- Top: Title and Navigation -->
    <top>
        <VBox spacing="10" style="-fx-padding: 15;">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Reports" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
            </HBox>
            <Separator/>
        </VBox>
    </top>
    
    <!-- Center: Tab Pane for different report views -->
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            
            <!-- Tab 1: Summary Statistics -->
            <Tab text="Summary">
                <ScrollPane fitToWidth="true" style="-fx-control-inner-background: #f5f5f5;">
                    <VBox spacing="20" style="-fx-padding: 15;">
                        
                        <!-- summary statistics: basic counts like total, employed, whitelist/blacklist -->
                        <TitledPane text="Summary Statistics" collapsible="false">
                            <GridPane hgap="20" vgap="15" style="-fx-padding: 10;">
                                <Label text="Total Students:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <Label fx:id="totalStudentsLabel" text="0" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                                
                                <Label text="Employed:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <Label fx:id="employedLabel" text="0" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                                
                                <Label text="Unemployed:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <Label fx:id="unemployedLabel" text="0" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                                
                                <Label text="Whitelisted:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                <Label fx:id="whitelistLabel" text="0" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-text-fill: green;"/>
                                
                                <Label text="Blacklisted:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                                <Label fx:id="blacklistLabel" text="0" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-text-fill: red;"/>
                            </GridPane>
                        </TitledPane>
                        
                        <!-- academic status distribution: shows counts per year/status -->
                        <TitledPane text="Academic Status Distribution" collapsible="false">
                            <GridPane hgap="20" vgap="10" style="-fx-padding: 10;" fx:id="statusGrid">
                            </GridPane>
                        </TitledPane>
                        
                        <!-- programming languages usage: top languages and counts -->
                        <TitledPane text="Programming Languages Usage" collapsible="false">
                            <GridPane hgap="20" vgap="10" style="-fx-padding: 10;" fx:id="languagesGrid">
                            </GridPane>
                        </TitledPane>
                        
                        <!-- preferred roles: shows role distribution -->
                        <TitledPane text="Preferred Roles Distribution" collapsible="false">
                            <GridPane hgap="20" vgap="10" style="-fx-padding: 10;" fx:id="rolesGrid">
                            </GridPane>
                        </TitledPane>
                        
                    </VBox>
                </ScrollPane>
            </Tab>
            
            <!-- Tab 2: Whitelisted/Blacklisted Students -->
            <Tab text="Whitelist/Blacklist">
                <VBox spacing="10" style="-fx-padding: 15;">
                    
                    <!-- filter buttons: pick whitelist, blacklist, or all -->
                    <HBox spacing="10">
                        <Button fx:id="whitelistBtn" text="Show Whitelisted Students" prefWidth="200"/>
                        <Button fx:id="blacklistBtn" text="Show Blacklisted Students" prefWidth="200"/>
                        <Button fx:id="allStudentsBtn" text="Show All Students" prefWidth="150"/>
                    </HBox>
                    
                    <!-- students table: shows rows for easy scanning and export later -->
                    <TableView fx:id="studentsTable" prefHeight="400">
                        <columns>
                            <TableColumn text="Name" prefWidth="150" fx:id="nameColumn"/>
                            <TableColumn text="Academic Status" prefWidth="120" fx:id="statusColumn"/>
                            <TableColumn text="Preferred Role" prefWidth="100" fx:id="roleColumn"/>
                            <TableColumn text="Employment" prefWidth="100" fx:id="employmentColumn"/>
                            <TableColumn text="Languages" prefWidth="150" fx:id="languagesColumn"/>
                            <TableColumn text="Whitelist" prefWidth="80" fx:id="whitelistColumn"/>
                            <TableColumn text="Blacklist" prefWidth="80" fx:id="blacklistColumn"/>
                        </columns>
                    </TableView>
                    
                </VBox>
            </Tab>
            
        </TabPane>
    </center>
    
    <!-- Bottom: Navigation Buttons -->
    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 15;">
            <Button fx:id="backBtn" text="Back" prefWidth="100"/>
            <Button fx:id="refreshBtn" text="Refresh" prefWidth="100"/>
        </HBox>
    </bottom>
    
</BorderPane>
