<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="cs151.application.DefineLanguagesController"
            prefWidth="600" prefHeight="420">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" padding="10">
            <Button text="← Back" onAction="#onBack"/>
            <Label text="Define Programming Languages"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <GridPane hgap="10" vgap="10" padding="10">
            <columnConstraints>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="75"/>
            </columnConstraints>

            <Label text="Name (required):" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" promptText="e.g., Java"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        </GridPane>
    </center>

    <bottom>
        <VBox spacing="10" padding="10">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Add" onAction="#onAdd"/>
                <Button text="Save to CSV (optional)" onAction="#onSaveCSV"/>
                <Label fx:id="statusLabel" textFill="#555"/>
            </HBox>
            <TableView fx:id="table" prefHeight="220">
                <columns>
                    <TableColumn fx:id="nameCol" text="Name" prefWidth="560"/>
                </columns>
            </TableView>
        </VBox>
    </bottom>
</BorderPane>
